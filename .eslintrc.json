{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier", "jest"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "quotes": [2, "single", { "avoidEscape": true }],
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto",
          "singleQuote": true 
        }
      ],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    }
}
